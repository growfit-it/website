---
import { ASSETS_BASE_URL } from '../../config/api';

const response = await fetch(`${ASSETS_BASE_URL}/api/our-partner?populate[PartnerLogo]=true`);
const data = await response.json();
const partners = data.data.PartnerLogo;

---

<section class="py-12 border-t border-gray-100">
  <div class="container mx-auto px-6">
    <div class="flex flex-wrap items-center justify-center gap-16">
      {partners.map(partner => (
        <img 
          src={`${ASSETS_BASE_URL}${partner.url}`} 
          alt={partner.name} 
          class="h-12 opacity-60 grayscale hover:opacity-100 transition-opacity" 
        />
      ))}
    </div>
  </div>
</section>